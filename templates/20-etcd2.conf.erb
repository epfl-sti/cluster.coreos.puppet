[Service]
Environment="ETCD_ADVERTISE_CLIENT_URLS=http://<%= @ipaddress_ethbr4 %>:2379"
Environment="ETCD_INITIAL_ADVERTISE_PEER_URLS=http://<%= @ipaddress_ethbr4 %>:2380"
Environment="ETCD_LISTEN_CLIENT_URLS=http://0.0.0.0:2379,http://0.0.0.0:4001"
Environment="ETCD_LISTEN_PEER_URLS=http://<%= @ipaddress_ethbr4 %>:2380,http://<%= @ipaddress_ethbr4 %>:7001"
Environment="ETCD_NAME=<%= @fqdn %>"
# https://github.com/coreos/etcd/blob/master/Documentation/clustering.md says
# that ETCD_INITIAL_CLUSTER_* parameters are only looked at if there is no
# state in /var/lib/etcd2 (i.e., fresh reinstall)
Environment="ETCD_INITIAL_CLUSTER=<% @members.each do |k,v| -%>
<%= k %>=http://<%= v %>:2380,<% end -%>"
<% if @is_proxy %>
Environment="ETCD_PROXY=on"
<% else %>
Environment="ETCD_INITIAL_CLUSTER_STATE=existing"
<% end %>
