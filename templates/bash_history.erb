journalctl -xe
journalctl -l
systemctl list-unit-files
systemctl cat puppet.service
docker exec -it puppet.service puppet agent -t
sudo docker rm -f puppet.service
etcdctl cluster-health
etcdctl member list
fleetctl list-machines
fleetctl list-units
fleetctl list-unit-files
